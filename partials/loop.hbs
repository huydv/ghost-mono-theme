
{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
        <time class="post-date post-meta" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt words="80"}}...</p>
    </section>
     <a href="{{url}}" class="read-more btn btn-default">Continue Reading</a>
    <footer class="post-footer">
        {{!--{{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        {{author}}--}}
        <span class="post-meta">{{tags prefix=" on "}}</span>
        
    </footer>
</article>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}